{
  "name": "freqle",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "dev": "pnpm web:dev",
    "build": "pnpm web:build",
    "start": "pnpm web:start",
    "lint": "pnpm web:lint",
    "format": "pnpm web:format",
    "db:generate": "pnpm web:db:generate",
    "db:push": "pnpm web:db:push",
    "db:upsert-puzzle": "pnpm web:db:upsert-puzzle",
    "db:set-admin": "pnpm web:db:set-admin",
    "puzzle:upsert-day": "pnpm web:puzzle:upsert-day",
    "user:set-admin": "pnpm web:user:set-admin",
    "web:dev": "./scripts/with-root-env.sh pnpm --filter @freqle/web dev",
    "web:build": "./scripts/with-root-env.sh pnpm --filter @freqle/web build",
    "web:start": "./scripts/with-root-env.sh pnpm --filter @freqle/web start",
    "web:lint": "./scripts/with-root-env.sh pnpm --filter @freqle/web lint",
    "web:format": "./scripts/with-root-env.sh pnpm --filter @freqle/web format",
    "web:db:generate": "./scripts/with-root-env.sh pnpm --filter @freqle/web db:generate",
    "web:db:push": "./scripts/with-root-env.sh pnpm --filter @freqle/web db:push",
    "web:db:upsert-puzzle": "./scripts/with-root-env.sh pnpm --filter @freqle/web db:upsert-puzzle",
    "web:db:set-admin": "./scripts/with-root-env.sh pnpm --filter @freqle/web db:set-admin",
    "web:puzzle:upsert-day": "./scripts/with-root-env.sh pnpm --filter @freqle/web puzzle:upsert-day",
    "web:user:set-admin": "./scripts/with-root-env.sh pnpm --filter @freqle/web user:set-admin",
    "api:setup": "python3 -c \"import sys; raise SystemExit(0) if (3,10) <= sys.version_info < (3,13) else SystemExit('Python 3.10-3.12 is required for apps/api')\" && python3 -m venv apps/api/.venv && apps/api/.venv/bin/pip install -r apps/api/requirements-dev.txt",
    "api:dev": "./scripts/with-root-env.sh sh -c 'cd apps/api && ./.venv/bin/python -m uvicorn app.main:app --reload --host ${API_HOST:-0.0.0.0} --port ${API_PORT:-8000}'",
    "api:lint": "./scripts/with-root-env.sh sh -c 'cd apps/api && ./.venv/bin/python -m ruff check .'",
    "api:test": "./scripts/with-root-env.sh sh -c 'cd apps/api && ./.venv/bin/python -m pytest'"
  }
}
